<?xml version="1.0" encoding="utf-8"?>




<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f3f3f3"
    tools:context=".ui.fragments.ServiciosFragment">




  <GridLayout
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:columnCount="2"
      android:rowCount="6"
      android:layout_margin="10dp">




      <androidx.cardview.widget.CardView
          android:id="@+id/cvComidas"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          app:cardCornerRadius="20dp"
          app:cardElevation="0dp"
          android:layout_margin="10dp"
          android:layout_width="0dp"
          android:layout_height="0dp"
          >

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <ImageView
                  android:layout_width="70dp"
                  android:layout_marginTop="20dp"
                  android:layout_centerInParent="true"
                  android:layout_height="70dp"
                  android:src="@drawable/ic_comidas"/>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:text="Comidas"
                      android:textAlignment="center"
                      android:textSize="15sp"
                      android:textStyle="bold" />
              </LinearLayout>





          </RelativeLayout>

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/cvSuper"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          app:cardCornerRadius="20dp"
          app:cardElevation="0dp"
          android:layout_margin="10dp"
          android:layout_width="0dp"
          android:layout_height="0dp">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <ImageView
                  android:layout_width="70dp"
                  android:layout_centerInParent="true"
                  android:layout_height="70dp"
                  android:src="@drawable/ic_super"/>


              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:text="Supermercados"
                      android:textAlignment="center"
                      android:textSize="15sp"
                      android:textStyle="bold" />
              </LinearLayout>



          </RelativeLayout>


      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/cvTaller"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          app:cardCornerRadius="20dp"
          app:cardElevation="0dp"
          android:layout_margin="10dp"
          android:layout_width="0dp"
          android:layout_height="0dp">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <ImageView
                  android:layout_width="70dp"
                  android:layout_centerInParent="true"
                  android:layout_height="70dp"
                  android:src="@drawable/ic_auxilio"/>


              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:text="Auxilio"
                      android:textAlignment="center"
                      android:textSize="15sp"
                      android:textStyle="bold" />
              </LinearLayout>



          </RelativeLayout>


      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/cvProfesionales"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          app:cardCornerRadius="20dp"
          app:cardElevation="0dp"
          android:layout_margin="10dp"
          android:layout_width="0dp"
          android:layout_height="0dp">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <ImageView
                  android:layout_width="70dp"
                  android:layout_centerInParent="true"
                  android:layout_height="70dp"
                  android:src="@drawable/ic_profesionales"/>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:text="Profesionales"
                      android:textAlignment="center"
                      android:textSize="15sp"
                      android:textStyle="bold" />
              </LinearLayout>



          </RelativeLayout>


      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/cvOtros"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          app:cardCornerRadius="20dp"
          app:cardElevation="0dp"
          android:layout_margin="10dp"
          android:layout_width="0dp"
          android:layout_height="0dp">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <ImageView
                  android:layout_width="70dp"
                  android:layout_centerInParent="true"
                  android:layout_height="70dp"
                  android:src="@drawable/ic_indumentaria"/>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:text="Otros"
                      android:textAlignment="center"
                      android:textSize="15sp"
                      android:textStyle="bold" />
              </LinearLayout>



          </RelativeLayout>


      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/cvAlquileres"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          app:cardCornerRadius="20dp"
          app:cardElevation="0dp"
          android:layout_margin="10dp"
          android:layout_width="0dp"
          android:layout_height="0dp">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <ImageView
                  android:layout_width="70dp"
                  android:layout_centerInParent="true"
                  android:layout_height="70dp"
                  android:src="@drawable/ic_alquiler"/>


              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:text="Alquileres"
                      android:textAlignment="center"
                      android:textSize="15sp"
                      android:textStyle="bold" />
              </LinearLayout>


          </RelativeLayout>


      </androidx.cardview.widget.CardView>







  </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>